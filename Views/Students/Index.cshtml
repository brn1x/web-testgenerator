@model IEnumerable<GeradorDeProvas.Models.Entity.PeriodStudent>

@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>

<p>
    <a asp-action="Create">Create new Student</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Student Name
            </th>
            <th>
                Period
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Period.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Student.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Student.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Student.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
