@model GeradorDeProvas.Models.ViewModel.PeriodStudentVM

@{
    ViewData["Title"] = "Student Edit";
}

<h1>Student - Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Student" class="control-label"></label>
                <input asp-for="Student" class="form-control" />
                <span asp-validation-for="Student" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Period</label>
                <select class="form-control" asp-for="Period"
                        asp-items="@ViewBag.Periods" disabled></select>
                <span asp-validation-for="Period" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
